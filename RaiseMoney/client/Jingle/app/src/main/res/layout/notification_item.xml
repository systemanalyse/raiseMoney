<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="9dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/notification_origin"
      android:layout_width="43dp"
      android:layout_height="43dp"
      android:src="@drawable/publish_icon" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_marginLeft="19dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你发起的任务已完成，点击确认"
        android:textSize="13sp"
        android:textColor="@color/text_color_0"
        />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/message_type"
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:src="@drawable/pao"
          android:layout_marginRight="7dp"
          android:visibility="visible"/>

        <TextView
          android:id="@+id/message_desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:singleLine="true"
          android:textColor="@color/text_color_6"
          android:textSize="13sp"
          android:text="求好心人帮忙带快递～求好心人帮 ..."/>

      </LinearLayout>

      <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_6"
        android:textSize="10sp"
        android:text="今天17:40"
        android:layout_marginBottom="9dp"/>

      <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/info_button"
        android:layout_marginBottom="9dp"/>

    </LinearLayout>

  </LinearLayout>

  <View
    android:id="@+id/new_message_mark"
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:layout_gravity="right"
    android:background="@drawable/circle"/>

</FrameLayout>
