<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_marginTop="12dp"
  android:layout_marginBottom="12dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/assignment_type"
      android:layout_width="18dp"
      android:layout_height="18dp"
      android:src="@drawable/pao"/>

    <TextView
      android:id="@+id/assignment_title"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:text="求好心人帮拿快递！"
      android:textColor="@color/black"
      android:textSize="13sp"
      android:gravity="center_vertical"
      android:layout_marginLeft="7dp" />

    <ImageView
      android:id="@+id/assignment_status"
      android:layout_width="60dp"
      android:layout_height="20dp"
      android:src="@drawable/state_running"
      android:text="待接单"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">

    <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/coin"/>

    <TextView
      android:id="@+id/assignment_value"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:text="- 5"
      android:textSize="16sp"
      android:textColor="@color/text_color_8"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:layout_marginLeft="6dp" />

  </LinearLayout>

  <TextView
    android:id="@+id/assignment_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:textColor="@color/text_color_8"
    android:textSize="10sp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="9dp"
    android:text="今天17:40 发起"/>

  <View
    android:id="@+id/assignment_divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#D6D6D6"
    android:layout_marginBottom="4dp"/>

</LinearLayout>
