<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="校园认证，交易安全有保障"
    android:textColor="#606466"
    android:textSize="16sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/plot"
    android:layout_marginBottom="45dp"/>

  <ImageView
    android:id="@+id/plot"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    android:src="@drawable/third_intro_frag"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="43dp"
    app:layout_constraintTop_toBottomOf="@+id/plot"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <View
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:background="@drawable/intro_gray_circle" />

    <View
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_marginLeft="8dp"
      android:background="@drawable/intro_gray_circle" />

    <View
      android:layout_width="24dp"
      android:layout_height="12dp"
      android:layout_marginLeft="8dp"
      android:background="@drawable/intro_active_circle" />

  </LinearLayout>

</android.support.constraint.ConstraintLayout>
