<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  tools:context=".ui.activity.wallet.RechargeActivity">

  <android.support.design.widget.AppBarLayout
    android:id="@+id/appbarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:liftOnScroll="true">

    <android.support.v7.widget.Toolbar
      android:id="@+id/recharge_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="#fff"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="充值"
        android:textColor="@color/black"
        android:textSize="17sp" />

    </android.support.v7.widget.Toolbar>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/toolbar_bottom_line"/>

  </android.support.design.widget.AppBarLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/appbarLayout">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择充值金额"
        android:textColor="@color/text_color_0"
        android:textSize="20sp"/>

      <android.support.design.card.MaterialCardView
        android:id="@+id/recharge_50_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:background="@drawable/cardview_edge"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp">

          <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/coin" />

          <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="50 JIN币"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 元"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        </LinearLayout>

      </android.support.design.card.MaterialCardView>

      <android.support.design.card.MaterialCardView
        android:id="@+id/recharge_100_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:background="@drawable/cardview_edge"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp">

          <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/coin" />

          <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="100 JIN币"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 元"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        </LinearLayout>

      </android.support.design.card.MaterialCardView>

      <android.support.design.card.MaterialCardView
        android:id="@+id/recharge_500_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:background="@drawable/cardview_edge"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp">

          <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/coin" />

          <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="500 JIN币"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 元"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        </LinearLayout>

      </android.support.design.card.MaterialCardView>

      <android.support.design.card.MaterialCardView
        android:id="@+id/recharge_1000_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:background="@drawable/cardview_edge"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp">

          <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/coin" />

          <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1000 JIN币"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 元"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        </LinearLayout>

      </android.support.design.card.MaterialCardView>

    </LinearLayout>

  </ScrollView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="23dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:gravity="center_vertical">

    <android.support.design.button.MaterialButton
      android:id="@+id/recharge_info_btn"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="56dp"
      app:cornerRadius="28dp"
      android:text="共选择 5 元"
      android:textColor="@color/black"
      android:backgroundTint="@color/info_button"
      android:textSize="16sp"
      android:layout_marginRight="15dp"
      android:visibility="gone"/>

    <android.support.design.button.MaterialButton
      android:id="@+id/confirm_recharge_btn"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="56dp"
      app:cornerRadius="28dp"
      android:backgroundTint="@color/recharge_cart_item_active_bg"
      android:textSize="16sp"
      android:textColor="@color/white"
      android:text="确认支付"/>

  </LinearLayout>


</android.support.constraint.ConstraintLayout>
