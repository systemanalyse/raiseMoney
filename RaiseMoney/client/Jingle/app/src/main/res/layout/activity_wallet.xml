<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  tools:context=".ui.activity.wallet.WalletActivity">

  <android.support.design.widget.AppBarLayout
    android:id="@+id/appbarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:liftOnScroll="true">

    <android.support.v7.widget.Toolbar
      android:id="@+id/wallet_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="#fff"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="我的钱包"
        android:textColor="@color/black"
        android:textSize="17sp" />

    </android.support.v7.widget.Toolbar>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/toolbar_bottom_line"/>

  </android.support.design.widget.AppBarLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/appbarLayout">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:orientation="vertical">

      <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="177dp"
        app:cardCornerRadius="16dp"
        >

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:background="@drawable/wallet_bg"
          android:gravity="center_vertical|right">

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            android:gravity="center">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="199"
              android:textColor="@color/white"
              android:textSize="26sp"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="剩余JIN币"
              android:textColor="@color/white"
              android:textSize="22sp"/>

          </LinearLayout>

        </LinearLayout>

      </android.support.design.card.MaterialCardView>

      <LinearLayout
        android:id="@+id/recharge_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp">

        <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@drawable/recharge"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="充值"
          android:textSize="16sp"
          android:layout_marginLeft="8dp"
          android:textColor="@color/text_color_1"/>

        <ImageView
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:src="@drawable/right_arrow"
          android:scaleType="fitXY"/>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/withdraw_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp">

        <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@drawable/withdraw"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="提现"
          android:textSize="16sp"
          android:layout_marginLeft="8dp"
          android:textColor="@color/text_color_1"/>

        <ImageView
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:src="@drawable/right_arrow"
          android:scaleType="fitXY"/>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/bill_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp">

        <ImageView
          android:layout_width="37dp"
          android:layout_height="37dp"
          android:src="@drawable/bill"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="查看账单"
          android:textSize="16sp"
          android:layout_marginLeft="8dp"
          android:textColor="@color/text_color_1"/>

        <ImageView
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:src="@drawable/right_arrow"
          android:scaleType="fitXY"/>

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</android.support.constraint.ConstraintLayout>
